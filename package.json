{
	"name": "sherv-challenge",
	"version": "1.0.0",
	"private": true,
	"engines": {
		"node": ">= 16",
		"npm": ">=8"
	},
	"scripts": {
		"build": "wp-scripts build",
		"dev": "wp-scripts start",
		"format": "npm-run-all --parallel format:*",
		"format:css": "stylelint \"**/*.css\" --fix",
		"format:js": "eslint --ext .js,.ts,.tsx --fix .",
		"format:php": "composer phpcbf",
		"lint": "npm-run-all --parallel lint:*",
		"lint:css": "stylelint \"**/*.css\"",
		"lint:js": "eslint --ext .js,.ts,.tsx .",
		"lint:php": "composer phpcs"
	},
	"devDependencies": {
		"@wordpress/eslint-plugin": "^13.3.0",
		"@wordpress/prettier-config": "^2.2.0",
		"@wordpress/scripts": "^24.4.0",
		"@wordpress/stylelint-config": "^21.2.0",
		"eslint": "^8.25.0",
		"eslint-plugin-jsdoc": "^39.3.6",
		"eslint-plugin-react-hooks": "^4.6.0",
		"npm-run-all": "^4.1.5",
		"prettier": "npm:wp-prettier@^2.6.2",
		"stylelint": "^14.13.0",
		"webpackbar": "^5.0.2"
	},
	"dependencies": {
		"prop-types": "^15.8.1",
		"slugify": "^1.6.5",
		"use-debounce": "^8.0.4"
	}
}
