{
  "name": "sherv-challenge",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "vite build",
    "watch": "vite build --watch",
    "dev": "cross-env NODE_ENV=development vite",
    "format": "npm-run-all --parallel format:*",
    "format:css": "stylelint \"**/*.css\" --fix",
    "format:js": "eslint --ext .js,.ts,.tsx --fix .",
    "format:php": "composer phpcbf",
    "lint": "npm-run-all --parallel lint:*",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:js": "eslint --ext .js,.ts,.tsx .",
    "lint:php": "composer phpcs",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.css": "stylelint --fix --allow-empty-input",
    "*.js": [
      "eslint --fix"
    ],
    "*.php": "npm run lint:php:fix"
  },
  "devDependencies": {
    "@wordpress/eslint-plugin": "^13.3.0",
    "@wordpress/postcss-plugins-preset": "^4.3.0",
    "@wordpress/prettier-config": "^2.2.0",
    "@wordpress/stylelint-config": "^21.2.0",
    "autoprefixer": "^10.4.12",
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "postcss-import": "^15.0.0",
    "postcss-nested": "^6.0.0",
    "prettier": "^2.7.1",
    "stylelint": "^14.13.0",
    "tailwindcss": "^3.1.8",
    "vite": "^3.1.8",
    "vite-plugin-live-reload": "^3.0.1"
  },
  "dependencies": {
    "js-circle-progress": "^0.2.4"
  }
}
